<div class="devise-field">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-structor-sign-up">
      <div class="sign-up">
        <section class="hero is-fullheight has-text-centered hero--bg">
          <div class="hero-body">
            <div class="container container--hero">
              <h1 class="title title--hero">
                FaReS
              </h1>
            </div>
          </div>
        </section>
        <h2 class="form-title" id="sign-up">Sign up</h2>
        <div class="form-holder">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input", placeholder: "nameID" %>
        </div>
        <div class="form-holder">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "Email" %>
        </div>
        <div class="form-holder">
          <%= f.password_field :password, autocomplete: "new-password", class: "input", placeholder: "パスワード(6文字以上)" %>
        </div>
        <div class="form-holder">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", placeholder: "確認用パスワード" %>
        </div>
        <br>
        <%= f.submit "Sign up", class: 'submit-btn' %>
        <%= link_to "Log in", new_user_session_path, class: "submit-btn text-center", style: "text-decoration: none;" %>
      </div>
      <div class="center"></div>
    </div>
  <% end %>
</div>

