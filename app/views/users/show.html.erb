<div class="container">
  <%= render "devise/shared/error_messages", resource: @topic %>
  <div class="row">
    <div class="col-lg-8">
      <h3 class="card-header" style="background-color: white;">過去の投稿</h3>​
      <div class="row">
        <% @topics.reverse_each do |topic| %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <div class="card-body p-0">
                <%= link_to topic_path(topic) do %>
                  <%= attachment_image_tag topic, :image, :fill, 300, 300, fallback: "no_cloth.jpg", width: "100%", height: "100%" %>
                <% end %>
                <div class="p-2">
                  <strong>服の好み・要望</strong>
                  <p class="card-text"><%= topic.text %></p>
                  <div class="d-flex justify-content-start align-items-center">
                    <div class="btn-group">
                      <%= link_to "View", topic_path(topic), class: "btn btn-sm btn-outline-secondary", style: "text-decoration: none;" %>
                      <%= link_to "Delete", topic_path(topic), class: "btn btn-sm btn-outline-secondary", method: :delete, style: "text-decoration: none;" %>
                    </div>
                  </div>
                  <div class="d-flex justify-content-end align-items-center">
                    <small class="text-muted"><%= topic.created_at %></small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-lg-4">
      <% # 画像トリミング部分 %>

      <div class="card mb-3">
        <h3 class="card-header">投稿する</h3>
        <div class="d-flex justify-content-center align-items-center m-2">
          <%= attachment_image_tag @topic, :image, :fill, 200, 200, fallback: "no_cloth.jpg", size: "200x200", class: "item_img" %>
        </div>
        <%= form_with model: @topic do |f| %>
          <div class="form-group m-2">
            <label for="avatar">写真を選んでください</label><br>
            <%= f.file_field :image, class: "upload-img" %>
          </div>
          <br>
          <div class="form-group m-2">
            <% # 依頼したい服の傾向 %>
            <label for="exampleTextarea">服の好みや要望などを記入してください</label>
            <%= f.text_area :text, class: "form-control", id: "text", rows: "3" %>
          </div>
          <%= f.submit "投稿する", class: "btn btn-secondary pull-right m-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>